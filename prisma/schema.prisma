// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model List {
  id String @id @default(uuid())
  title String @unique
  items String[]
  categories String[]
  language String
  authorId String
  status ListStatus
  plays Play[]
  clears Clear[]
  skips Skip[]
  likes Like[]
  dislikes Dislike[]
  objection String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Like {
  id String @id @default(uuid())
  listId String
  list List @relation(fields: [listId], references: [id])
  userId String
  createdAt DateTime @default(now())
}

model Dislike {
  id String @id @default(uuid())
  listId String
  list List @relation(fields: [listId], references: [id])
  userId String
  createdAt DateTime @default(now())
}

model Skip {
  listId String
  list List @relation(fields: [listId], references: [id])
  guildId String @unique
  createdAt DateTime @default(now())
}

model Clear {
  listId String
  list List @relation(fields: [listId], references: [id])
  guildId String @unique
  createdAt DateTime @default(now())
}

model Play {
  listId String
  list List @relation(fields: [listId], references: [id])
  guildId String @unique
  createdAt DateTime @default(now())
}

enum ListStatus {
  DRAFT
  IN_REVIEW
  NEEDS_CORRECTIONS
  PUBLISHED
}